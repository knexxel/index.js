<%- include('head') %>

    <main class="animate-fade-in">

        <div class="mb-12">
            <a href="/" class="text-muted hover:text-white transition-colors text-sm link-underline no-underline">
                &larr; Back to home
            </a>
        </div>

        <h2 class="text-3xl font-bold text-white mb-8 tracking-tight">Blog</h2>

        <div class="space-y-6">
            <% posts.forEach((post)=> { %>
                <a href="/blog/<%= post.slug %>"
                    class="group flex flex-col md:flex-row md:items-baseline md:justify-between no-underline cursor-pointer">
                    <span class="text-lg text-foreground link-underline font-medium transition-colors">
                        <%= post.metadata.title %>
                    </span>

                    <span class="text-muted text-sm md:text-base mt-1 md:mt-0 whitespace-nowrap md:ml-6 font-normal">
                        <%= post.metadata.date.toLocaleDateString('en-US',{ year:'numeric', month:'short', day:'numeric'
                            }) %>
                    </span>
                </a>
                <% }); %>
        </div>
    </main>

    </body>

    </html>